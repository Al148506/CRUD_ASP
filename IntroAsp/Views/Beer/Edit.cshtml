@using IntroAsp.Models.ViewModels
@model BeerViewModel
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Cerveza</h2>
        <form asp-controller="Beer" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="BeerId" type="hidden" />
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="Name" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <div class="mb-3"></div>
            <div class="mb-4">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Beer" asp-action="Index" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>
@*Este codigo sirve para que la validacion pueda
    visualizarse en el frontend utilizando codigo de Javascript*@
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}